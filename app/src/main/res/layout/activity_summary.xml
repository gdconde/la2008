<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="@string/name"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:text="@string/time"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:text="@string/points"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:text="@string/three_points"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:text="@string/rebounds"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:text="@string/assists"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:text="@string/fouls"
            android:textAlignment="center"
            android:textStyle="bold"
            />

    </LinearLayout>

    <app.la2008.com.ar.la2008.views.PlayerSummaryView
        android:id="@+id/player1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <app.la2008.com.ar.la2008.views.PlayerSummaryView
        android:id="@+id/player2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        />

    <app.la2008.com.ar.la2008.views.PlayerSummaryView
        android:id="@+id/player3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <app.la2008.com.ar.la2008.views.PlayerSummaryView
        android:id="@+id/player4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        />

    <app.la2008.com.ar.la2008.views.PlayerSummaryView
        android:id="@+id/player5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <app.la2008.com.ar.la2008.views.PlayerSummaryView
        android:id="@+id/player6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        />

    <app.la2008.com.ar.la2008.views.PlayerSummaryView
        android:id="@+id/player7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <app.la2008.com.ar.la2008.views.PlayerSummaryView
        android:id="@+id/player8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        />

    <app.la2008.com.ar.la2008.views.PlayerSummaryView
        android:id="@+id/player9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <app.la2008.com.ar.la2008.views.PlayerSummaryView
        android:id="@+id/player10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        />

    <app.la2008.com.ar.la2008.views.PlayerSummaryView
        android:id="@+id/player11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <app.la2008.com.ar.la2008.views.PlayerSummaryView
        android:id="@+id/player12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        />

</LinearLayout>