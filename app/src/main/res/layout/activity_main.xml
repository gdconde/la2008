<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.la2008.com.ar.la2008.activities.MainActivity"
    >

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/colorPrimary"
        android:text="@string/start_new_game"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        android:text="@string/live_games"
        android:layout_marginLeft="16dp"
        />

    <TextView
        android:id="@+id/noGamesLiveTextview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        android:text="No games found"
        android:layout_marginLeft="16dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/liveGamesRecyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:layout_margin="16dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        android:text="@string/finished_games"
        android:layout_marginLeft="16dp"
        />

    <TextView
        android:id="@+id/noGamesFinishedTextview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="No games found"
        android:layout_marginLeft="16dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/finishedGamesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_margin="16dp"
        />

</LinearLayout>
