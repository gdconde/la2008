<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="app.la2008.com.ar.la2008.activities.WatchGameActivity"
        >

        <app.la2008.com.ar.la2008.views.PlayerStatsView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:headerStats="true"
            android:background="@color/colorPrimaryDark"
            />

        <app.la2008.com.ar.la2008.views.PlayerStatsView
            android:id="@+id/playerStatsView1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <app.la2008.com.ar.la2008.views.PlayerStatsView
            android:id="@+id/playerStatsView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            />

        <app.la2008.com.ar.la2008.views.PlayerStatsView
            android:id="@+id/playerStatsView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
